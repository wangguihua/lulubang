    android:layout_height="fill_parent" android:background="@color/white"
    >
<TextView android:text="@string/tv_cancel_tab" android:layout_width="fill_parent" android:layout_marginTop="10dip"
		  android:layout_height="wrap_content"  android:layout_marginLeft="15dip"
		  android:textSize="18sp" android:textColor="@color/tab_select_color"/>
<EditText android:id="@+id/et_cancel"  android:layout_width="fill_parent" android:layout_height="wrap_content"
		  android:layout_margin="10dip" android:background="@drawable/bg_list_one_normal" android:minLines="3"
