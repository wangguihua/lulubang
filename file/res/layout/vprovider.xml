<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent" android:layout_height="fill_parent">
    <!-- head -->
    <include layout="@layout/com_header" />
    <!-- body -->
    <ScrollView   android:layout_width="fill_parent" android:layout_height="fill_parent" 
		android:layout_below="@+id/ll_head" android:fillViewport="true" android:measureAllChildren="false"
		android:scrollbars="none" android:background="@color/o_grey" >
		<LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="wrap_content">
		   <!-- 身份认证 -->
		   <RelativeLayout   android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_margin="5.0dip"  android:layout_marginBottom="5.0dip" 
		        android:background="@drawable/bg_list_one_normal">
              <TextView android:id="@+id/tv_apply_idcard"   android:layout_width="fill_parent" android:layout_height="wrap_content" android:drawableLeft="@drawable/tag_no" android:drawablePadding="5.0dip"
               android:layout_alignParentTop="true" android:gravity="center_vertical" android:textColor="@color/black" android:textSize="16.0dip"
	           android:text="@string/tv_apply_idcard" android:layout_marginLeft="5.0dip" android:layout_marginRight="5.0dip" android:layout_marginTop="5.0dip" android:layout_marginBottom="5.0dip"
	           android:layout_toLeftOf="@+id/btn_apply_idcard"
	           />
              <Button android:id="@+id/btn_apply_idcard" android:layout_width="wrap_content" android:layout_height="wrap_content"  android:layout_marginRight="15.0dip"  android:layout_marginTop="3.0dip" 
                 android:background="@drawable/bg_btn_applyim"    android:layout_alignParentRight="true" 
                 android:text="@string/tv_apply_tab2"  android:textColor="@color/white" />
    
              <TextView android:id="@+id/tv_apply_idcard_about" android:layout_marginLeft="5.0dip" android:layout_marginRight="5.0dip" android:lineSpacingExtra="3.0dip" android:layout_width="fill_parent" android:layout_height="wrap_content" 
               android:layout_below="@+id/tv_apply_idcard" android:layout_centerVertical="true" android:textColor="@color/grey" android:textSize="12.0dip"
	           android:text="@string/tv_apply_idcard_about"
  	          />
           </RelativeLayout>
		   <!-- 驾照认证 -->
		   <RelativeLayout   android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_margin="5.0dip"  android:layout_marginBottom="5.0dip" 
		        android:background="@drawable/bg_list_one_normal">
              <TextView android:id="@+id/tv_apply_driver"   android:layout_width="fill_parent" android:layout_height="wrap_content" android:drawableLeft="@drawable/tag_no" android:drawablePadding="5.0dip"
               android:layout_alignParentTop="true" android:gravity="center_vertical" android:textColor="@color/black" android:textSize="16.0dip"
	           android:text="@string/tv_apply_driver" android:layout_marginLeft="5.0dip" android:layout_marginRight="5.0dip" android:layout_marginTop="5.0dip" android:layout_marginBottom="5.0dip"
	           android:layout_toLeftOf="@+id/btn_apply_driver"
	           />
              <Button android:id="@+id/btn_apply_driver" android:layout_width="wrap_content" android:layout_height="wrap_content"  android:layout_marginRight="15.0dip"  android:layout_marginTop="3.0dip" 
                 android:background="@drawable/bg_btn_applyim"    android:layout_alignParentRight="true" 
                 android:text="@string/tv_apply_tab2"  android:textColor="@color/white" />
    
              <TextView android:id="@+id/tv_apply_driver_about" android:layout_marginLeft="5.0dip" android:layout_marginRight="5.0dip" android:lineSpacingExtra="3.0dip" android:layout_width="fill_parent" android:layout_height="wrap_content" 
               android:layout_below="@+id/tv_apply_driver" android:layout_centerVertical="true" android:textColor="@color/grey" android:textSize="12.0dip"
	           android:text="@string/tv_apply_driver_about"
  	          />
           </RelativeLayout>
           
		    <!-- 车型认证 -->
		   <RelativeLayout   android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_margin="5.0dip"  android:layout_marginBottom="5.0dip" 
		        android:background="@drawable/bg_list_one_normal">
              <TextView android:id="@+id/tv_apply_cartype"   android:layout_width="fill_parent" android:layout_height="wrap_content" android:drawableLeft="@drawable/tag_no" android:drawablePadding="5.0dip"
               android:layout_alignParentTop="true" android:gravity="center_vertical" android:textColor="@color/black" android:textSize="16.0dip"
	           android:text="@string/tv_apply_cartype" android:layout_marginLeft="5.0dip" android:layout_marginRight="5.0dip" android:layout_marginTop="5.0dip" android:layout_marginBottom="5.0dip"
	           android:layout_toLeftOf="@+id/btn_apply_cartype"
	           />
              <Button android:id="@+id/btn_apply_cartype" android:layout_width="wrap_content" android:layout_height="wrap_content"  android:layout_marginRight="15.0dip"  android:layout_marginTop="3.0dip" 
                 android:background="@drawable/bg_btn_applyim"    android:layout_alignParentRight="true" 
                 android:text="@string/tv_apply_tab2"  android:textColor="@color/white" />
    
              <TextView android:id="@+id/tv_apply_cartype_about" android:layout_marginLeft="5.0dip" android:layout_marginRight="5.0dip" android:lineSpacingExtra="3.0dip" android:layout_width="fill_parent" android:layout_height="wrap_content" 
