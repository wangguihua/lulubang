<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent" android:layout_height="fill_parent">
    <!-- head -->
    <include layout="@layout/com_header" />
    <!-- body -->
    <ScrollView   android:layout_width="fill_parent" android:layout_height="fill_parent" 
		android:layout_below="@+id/ll_head" android:fillViewport="true" android:measureAllChildren="false"
		android:scrollbars="none" android:background="@color/o_grey" >
		<LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="wrap_content">
	   <!-- 公司名称  -->
	   <RelativeLayout  android:layout_width="fill_parent"  android:layout_height="wrap_content" android:background="@drawable/xml_bg_list_up" android:layout_marginTop="10.0dip" >   
	   <EditText android:id="@+id/et_company"  android:layout_width="fill_parent"  android:layout_height="wrap_content" 
	     android:background="@null" android:paddingLeft="80.0dip"  android:paddingRight="10.0dip"
	     android:maxLength="30"  android:textSize="14.0sp"/>  
       <TextView android:textSize="14.0sp" android:textColor="@color/grey" android:gravity="center_vertical"  
            android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="15.0dip"
		    android:text="@string/tv_tab_company2"  android:layout_alignLeft="@+id/et_company" android:layout_alignTop="@+id/et_company" android:layout_alignBottom="@+id/et_company" />
       </RelativeLayout> 
       
	   <RelativeLayout  android:layout_width="fill_parent"  android:layout_height="wrap_content" android:background="@drawable/xml_bg_list_middle"  >   
	   <EditText android:id="@+id/et_type"  android:layout_width="fill_parent"  android:layout_height="wrap_content" 
	     android:background="@null" android:paddingLeft="80.0dip"  android:paddingRight="10.0dip"
	     android:maxLength="30"  android:textSize="14.0sp"/>  
       <TextView android:textSize="14.0sp" android:textColor="@color/grey" android:gravity="center_vertical"  
            android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="15.0dip"
		    android:text="@string/tv_tab_company_type"  android:layout_alignLeft="@+id/et_type" android:layout_alignTop="@+id/et_type" android:layout_alignBottom="@+id/et_type" />
       </RelativeLayout> 
       
	   <RelativeLayout  android:layout_width="fill_parent"  android:layout_height="wrap_content" android:background="@drawable/xml_bg_list_middle"  >   
	   <EditText android:id="@+id/et_address"  android:layout_width="fill_parent"  android:layout_height="wrap_content" 
	     android:background="@null" android:paddingLeft="80.0dip"  android:paddingRight="10.0dip"
	     android:maxLength="30"  android:textSize="14.0sp"/>  
       <TextView android:textSize="14.0sp" android:textColor="@color/grey" android:gravity="center_vertical"  
            android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="15.0dip"
		    android:text="@string/tv_tab_company_address"  android:layout_alignLeft="@+id/et_address" android:layout_alignTop="@+id/et_address" android:layout_alignBottom="@+id/et_address" />
       </RelativeLayout> 
	   
       <!-- 图片  -->
       <RelativeLayout android:background="@drawable/xml_bg_list_under" android:layout_width="fill_parent" android:layout_height="wrap_content" >
       
       <TextView android:id="@+id/tv_company_map_tab"  android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentLeft="true"
	    android:layout_centerVertical="true" android:textColor="@color/grey" android:gravity="center_vertical" 
	    android:layout_marginRight="15.0dip"  
	    android:textSize="14.0sp"  android:text="@string/tv_tab_company_map"  
  	   />
       
       
      <ImageView android:id="@+id/iv_company_map"  android:layout_width="60dip" android:layout_height="60dip"
           android:layout_toRightOf="@+id/tv_company_map_tab"   android:src="@drawable/bg_add_image"  android:layout_centerVertical="true" />
       
       </RelativeLayout> 

        </LinearLayout>        
    </ScrollView>
   
</RelativeLayout>